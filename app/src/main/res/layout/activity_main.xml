<?xml version="3.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:android2="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <!--app:background~をいれるとdrawable/button_formの色が反映される-->
    <ImageView
        android:id="@+id/Sai"
        android:layout_width="300dp"
        android:layout_height="300dp"
        android:layout_marginTop="50dp"
        android:src="@drawable/shihakyusaitsuno"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/buttonWaseda"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:background="@drawable/button_form_w"
        android:text="@string/waseda"
        android:textSize="20sp"
        app:backgroundTint="#9B042C"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.62" />

    <Button
        android:id="@+id/buttonToyama"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_marginBottom="95dp"
        android:background="@drawable/button_form_t"
        android:text="@string/toyama"
        android:textSize="20sp"
        app:backgroundTint="#18A139"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent" />

    <Button
        android:id="@+id/buttonLogin"
        android:layout_width="104dp"
        android:layout_height="50dp"
        android:text="@string/login"
        android:textSize="15sp"
        app:backgroundTint="#666666"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.976" />

    <Button
        android:id="@+id/buttonCloseweb"
        android:layout_width="104dp"
        android:layout_height="50dp"
        android:text="@string/close"
        android:textSize="15sp"
        app:backgroundTint="#666666"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.976"
        android:visibility="invisible"/>

    <WebView
        android:id="@+id/webView2"
        android:layout_height="match_parent"
        android:layout_width="match_parent"
        android:visibility="invisible"/>


</androidx.constraintlayout.widget.ConstraintLayout>